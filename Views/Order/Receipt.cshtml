@model CafeManagementSystem.Models.Order

<h2>🧾 Order Receipt</h2>
<hr />

<p><b>Order No:</b> @Model.OrderId</p>
<p><b>Date:</b> @Model.OrderDate</p>

<table border="1" width="100%">
    <tr>
        <th>Product</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Total</th>
    </tr>

    @foreach (var item in Model.OrderItems)
    {
        <tr>
            <td>@item.Product.ProductName</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td>@(item.Price* item.Quantity)</td>
        </tr>
    }
</table>

<h3>Total Amount: ₹ @Model.TotalAmount</h3>

<button onclick="window.print()">🖨 Print Receipt</button>

<style>
   @@media print {
        button

    {
        display: none;
    }

    }
</style>
